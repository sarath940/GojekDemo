<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/row_text_margin"
    android:layout_marginBottom="@dimen/row_text_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/x_large_margin"
            android:layout_height="@dimen/x_large_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:scaleType="fitCenter"
            android:src="@drawable/circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/title_text_length"
                android:layout_height="@dimen/row_text_name_size"
                android:background="@color/shimmer_color" />

            <View
                android:layout_width="@dimen/subscription_text_length"
                android:layout_height="@dimen/row_sub_text_name_size"
                android:layout_marginTop="@dimen/row_texts_between_margin"
                android:background="@color/shimmer_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
